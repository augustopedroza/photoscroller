<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pedroza.photoscroller.photoscroller.view.PhotoGalleryActivity">

    <ProgressBar
        android:id="@+id/load_photos_progress_bar"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        style="?android:attr/progressBarStyleLarge"
        app:layout_constraintBottom_toBottomOf="@+id/activity_photo_gallery_recycler_view"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/activity_photo_gallery_recycler_view"
        android:layout_marginLeft="0dp"
        app:layout_constraintVertical_bias="0.501"
        app:layout_constraintLeft_toLeftOf="@+id/activity_photo_gallery_recycler_view" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_photo_gallery_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
